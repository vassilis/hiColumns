Usage

<script type="text/javascript" src="/path/to/jquery-latest.js"></script>
<script type="text/javascript" src="/path/to/jquery.hiColumns.js"></script>

<script>
	$(function(){
		$('table').hiColumns();
	})
</script>



Options

<script>
	$(function(){
		$('#table').hiColumns({
			select: 'th',
			klass: 'highlighted'
		});
	})
</script>